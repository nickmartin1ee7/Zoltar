<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Zoltar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Zoltar"
    Shell.FlyoutBehavior="Flyout">
	<Shell.FlyoutHeaderTemplate>
		<DataTemplate>
			<VerticalStackLayout>
				<Label
					Margin="8,16,8,8"
					Text="Zoltar, The Fortune Teller"
					FontSize="Large"
					FontAttributes="Bold"
					HorizontalOptions="Center"/>
				<BoxView
					Margin="8,8"
					BackgroundColor="Black"
					HeightRequest="1" />
			</VerticalStackLayout>
		</DataTemplate>
	</Shell.FlyoutHeaderTemplate>
	<FlyoutItem
		Title="🔮 Fortune Teller"
		Route="MainPage">
		<ShellContent
            ContentTemplate="{DataTemplate local:MainPage}" />
	</FlyoutItem>
	<FlyoutItem
		Title="🥠 Previous Fortunes"
		Route="PreviousFortunesPage">
		<ShellContent
            ContentTemplate="{DataTemplate local:PreviousFortunesPage}" />
	</FlyoutItem>
	<FlyoutItem
		Title="⚙️ Onboarding"
		Route="OnboardingPage">
		<ShellContent
            Title="Onboarding"
            ContentTemplate="{DataTemplate local:OnboardingPage}" />
	</FlyoutItem>
</Shell>
